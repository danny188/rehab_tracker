<!-- Toast notification -->

<div role="alert" aria-live="polite" aria-atomic="true" data-autohide="true" data-delay="5000"class="toast" style="position: fixed; top: 70px; right: 15px;  ">
  <div class="toast-header">

    <strong class="mr-auto text-success toast-header-text"><%= session.delete(:toast_title) %></strong>
    <small></small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body" id="toast-content">
    <%= session.delete(:toast) %>
  </div>
</div>


<!-- Exercise library contents -->

<div class="d-flex justify-content-start">
  <span class="d-inline">
    <h2 class="mr-5 d-inline">Exercise Library</h2>


    <% if @patient %>
    <a href="/users/<%= @patient.username %>/exercises" class="mx-2 btn btn-outline-secondary">Return to Exercise Page of <%= full_name_plus_username(@patient) %></a>
    <% end %>

    <% if session[:error] %>

      <span class="alert alert-danger fade show" role="alert">
        <span><%= session.delete(:error) %></span>
      </span>

    <% end %>

    <% if session[:success] %>
    <span class=" col-5 alert alert-success fade show text-center mx-auto" role="alert">
      <span><%= session.delete(:success) %></span>
    </span>
    <% end %>

  </span>
</div>

<br>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/exercise_library">Main Library</a></li>

    <% @group_hierarchy.drop(1).each_with_index do |group_level_name, index| %>
      <% if @group_hierarchy.last == group_level_name %>
        <li class="breadcrumb-item active" aria-current="page"><%= group_level_name %></li>
      <% else %>
        <li class="breadcrumb-item"><a href="/exercise_library?group=<%= make_group_query_str(@group_hierarchy.take(index + 2)) %>"><%= group_level_name %></a></li>
      <% end %>
    <% end %>
  </ol>
</nav>


<br>
<div class="row">
  <div class="col">
    <h4 class="d-inline mr-4">Template Groups </h4>
    <!-- trigger modal to create new group -->
    <a type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#create_group">Create New Group</a>
  </div>
</div>

 <!-- Modal to create new group -->
<div class="modal" tabindex="-1" role="dialog" id="create_group">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Exercise Template Group</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form method="post" action="/exercise_library/create_group">
        <div class="modal-body">
          <div class="form-group row">
            <label for="instructions" class="col-3 col-form-label"><b>Group</b></label>
            <input name="group_lvl_1" id="group_lvl_1" type="text" class="form-control col-5" value="" placeholder="" data-toggle="tooltip" data-placement="top" title="Make a name for new group">
          </div>
          <div class="form-group row">
            <div class="col-1"></div>
            <label for="instructions" class="col-3 col-form-label"><b>Sub-Group</b></label>
            <input name="group_lvl_2" id="group_lvl_2" type="text" class="form-control col-5" value="" placeholder="" data-toggle="tooltip" data-placement="top" title="Create a subgroup under group above">
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Create</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<br>

<!-- Existing groups -->
<div class="row row-cols-1 row-cols-lg-6 row-cols-md-4">
  <% @group.subgroups.each_with_index do |subgroup, index| %>
  <div class="col mb-4">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title"><strong><%= subgroup.name %></strong></h5>
        <div class="row justify-content-center">
          <a class="float-right btn btn-outline-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Actions
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

            <a href="/exercise_library?group=<%= make_group_query_str(@group_hierarchy + [subgroup.name]) %>" class="dropdown-item text-primary" data-toggle="tooltip" title="Open group exercise template">Open</a>
            <hr>

            <form action="/exercise_library//delete<%= '?pt=' + @patient.username if @patient %>" method="post" onsubmit="return confirm('Are you sure you want to delete group and all its exercises? This cannot be reversed. Click OK to proceed.');">
              <button type="submit"  class="dropdown-item text-danger" data-toggle="tooltip" title="Delete template and associated data.">Delete</button>
            </form>
            <% if @patient %>
            <form id="template-form" class="template-form" action="/users/<%= @patient.username %>/exercises/add_group_from_library" method="POST">
              <input type="hidden" name="group_hierarchy_str" value="<%= make_group_query_str(@group_hierarchy + [subgroup.name]) %>">
              <button id="template-form-btn" type="submit" class="dropdown-item text-light bg-dark" value="submit">Add for <%= full_name_plus_username(@patient) %></button>
            </form>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>

<!-- Existing Templates -->
<hr>
<div class="row">
  <div class="col">
    <h4 class="d-inline mr-4">Exercise Templates</h4>

    <a href="/exercise_library/add_template<%= '?pt=' + @patient.username if @patient %>" class="btn btn-outline-primary">Create New Exercise Template</a>
  </div>
</div>

<br>
<div class="row row-cols-1 row-cols-lg-6 row-cols-md-4">


  <% @group.items.each_with_index do |template, index| %>
  <div class="col mb-4">
    <div class="card text-center">

      <img src="<%= template.get_image_link(0) || '/images/noimage.jpg' %>" class="card-img-top"  alt="...">
      <hr class="mt-0">

      <div class="card-body pt-0">
        <h5 class="card-title"><strong><%= template.name %></strong></h5>




        <div class="row justify-content-center">
          <a class="float-right btn btn-outline-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Actions
          </a>

          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

            <a href="/exercise_library/<%= template.name %>/edit<%= '?pt=' + @patient.username if @patient %>" class="dropdown-item text-primary" data-toggle="tooltip" title="View/Edit exercise template">View/Edit</a>

            <form action="/exercise_library/<%= template.name %>/delete<%= '?pt=' + @patient.username if @patient %>" method="post" onsubmit="return confirm('Are you sure you want to delete this template? This cannot be reversed. Click OK to proceed.');">
              <button type="submit"  class="dropdown-item text-danger" data-toggle="tooltip" title="Delete template and associated data.">Delete</button>
            </form>

            <% if @patient %>
            <form id="template-form" class="template-form" action="/users/<%= @patient.username %>/exercises/add_from_library" method="POST">
              <input type="hidden" name="template_name" value="<%= template.name %>">
              <button id="template-form-btn" type="submit" class="dropdown-item text-light bg-dark" value="submit">Add for <%= full_name_plus_username(@patient) %></button>
            </form>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>
