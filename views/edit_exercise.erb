<div class="row">
  <h2 class="col-5">Exercise Details</h2>


</div>


<hr/>

<div class="row"></div>
<div class="row"></div>

<div class="row">

  <div class="col-6">
    <form action="/users/<%= @patient.username %>/exercises/<%= @exercise.name %>/update" method="post">
      <div class="form-group row">
        <label for="exercise_name" class="col-3 col-form-label"><b>Name of exercise</b></label>
        <input type="text" class="form-control col-6" id="exercise_name" name="exercise_name" value="<%= @exercise.name %>">
      </div>
      <div class="form-group row">
        <label for="reps" class="col-3 col-form-label"><b>Repetitions</b></label>
        <input name="reps" list="reps" class="col-2 form-control" value="<%= @exercise.reps %>">
        <datalist id="reps">
         <option value="5"></option>
         <option value="10"></option>
         <option value="20"></option>
         <option value="30"></option>
         <option value="40"></option>
         <option value="50"></option>
         <option value="100"></option>
       </datalist>

       <label for="reps" class="col-1 offset-1 col-form-label"><b>Sets</b></label>
        <input name="sets" list="sets" class="col-2 form-control" value="<%= @exercise.sets %>">
        <datalist id="sets">
         <option value="1"></option>
         <option value="2"></option>
         <option value="3"></option>
         <option value="4"></option>
         <option value="5"></option>
       </datalist>
     </div>
     <div class="form-group row">
      <label for="instructions" class="col-3 col-form-label"><b>Instructions</b></label>
      <textarea class="form-control col-8" id="instructions" name="instructions" rows="3"><%= @exercise.instructions %></textarea>
    </div>
    <div class="form-group row">
      <label for="patient_comment" class="col-3 col-form-label"><b>Comments</b></label>
      <textarea class="form-control col-8" id="patient_comment" name="patient_comment" rows="3"><%= @exercise.comment_by_patient %></textarea>
    </div>
    <div class="form-group row">
      <label for="therapist_comment" class="col-3 col-form-label"><b>Therapist's reply</b></label>
      <textarea class="form-control col-8" id="therapist_comment" name="therapist_comment" rows="3"><%= @exercise.comment_by_therapist %></textarea>
    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label"></label>

      <button type="submit" class="btn btn-outline-primary form-control col-3 mr-2">Save</button>

      <a href="/users/<%= @patient.username %>/exercises" class="btn btn-outline-secondary form-control col-3">Back to exercises</a>
    </div>

    <label class="col-3 col-form-label"></label>

    <!-- success/error messages -->
    <% if session[:success] %>
    <div class="offset-3 col-8 alert alert-success fade show text-center" role="alert"><%= session.delete(:success) %></div>
    <% end %>

    <% if session[:error] %>
    <div class="offset-2 col-8 alert alert-danger fade show text-center" role="alert">
      <p><%= session.delete(:error) %></p>
    </div>
    <% end %>
  </form>


</div>

<!-- exercise images section -->
<div class="col-6">
  <form class="form-group row mb-4" action="/users/<%=@patient.username %>/exercises/<%= @exercise.name %>/upload_file" id="upload_form" method="post" enctype="multipart/form-data">
    <label for="patient_comment" class="col-5 col-form-label  "><b>Upload Exercise Images</b></label>
    <input type="file" id="chosen_file" accept="image/*" name="images[]" multiple />
    <input type="submit" value="Upload"/>
  </form>

  <div class="row row-cols-1 row-cols-md-2">
    <% @exercise.image_links.each do |image_link| %>
    <div class="col mb-4">
      <div class="card text-center">
        <img src="<%= image_link %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= File.basename(image_link) %></h5>
          <a href="#" class="btn btn-outline-dark">View Image</a>
          <a href="#" class="btn btn-outline-danger">Delete</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

</div>





