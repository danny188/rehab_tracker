<div class="col-6">
  <form>
    <div class="form-group row">
      <label for="exercise_name" class="col-3 col-form-label">Name of exercise</label>
      <input type="text" class="form-control col-6" id="exercises_name" name="exercises_name" placeholder="<%= @exercise.name %>">
    </div>
    <div class="form-group row">
      <label for="reps" class="col-3 col-form-label">Repetitions</label>
      <input list="reps" class="col-2 form-control">
      <datalist id="reps">
       <option value="5"></option>
       <option value="10"></option>
       <option value="20"></option>
       <option value="30"></option>
       <option value="40"></option>
       <option value="50"></option>
       <option value="100"></option>
     </datalist>
   </div>
   <div class="form-group row">
    <label for="instructions" class="col-3 col-form-label">Instructions</label>
    <textarea class="form-control col-7" id="instructions" name="instructions" rows="3"><%= @exercise.instructions %></textarea>
  </div>
  <div class="form-group row">
    <label for="patient_comment" class="col-3 col-form-label">Comments</label>
    <textarea class="form-control col-7" id="patient_comment" name="patient_comment" rows="3"><%= @exercise.comment_by_patient %></textarea>
  </div>
  <div class="form-group row">
    <label for="therapist_comment" class="col-3 col-form-label">Therapist's reply</label>
    <textarea class="form-control col-7" id="therapist_comment" name="therapist_comment" rows="3"><%= @exercise.comment_by_therapist %></textarea>
  </div>

</form>


