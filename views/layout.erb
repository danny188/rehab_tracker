<body>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="/">Rehab Buddy<i class="fas fa-grin-stars ml-2"></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
        <!-- Home button -->
<!--         <li class="nav-item <%= active_class(home_page_for(session[:user])) %>">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
 -->
        <!-- Patient list -->
        <li class="nav-item <%= active_class("/therapist_dashboard") %>">
          <% if session[:user] && session[:user].role == :therapist %>
          <a class="nav-link" href="/therapist_dashboard">Dashboard</a>
          <% end %>
        </li>

        <!-- Admin Panel -->
        <li class="nav-item <%= active_class("/users/#{session[:user].username if session[:user]}/admin_dashboard")%>">
          <% if session[:user] && session[:user].role == :admin %>
          <a class="nav-link" href="/users/<%= session[:user].username %>/admin_dashboard">Dashboard</a>
          <% end %>
        </li>

        <!-- Exercise page -->
        <li class="nav-item <%= active_class("/users/#{session[:user].username if session[:user] }/exercises") %>">
          <% if session[:user] && session[:user].role == :patient %>
          <a class="nav-link" href="/users/<%= (session[:user].username if session[:user]) %>/exercises">Exercises</a>
          <% end %>
        </li>

        <!-- Exercise Library -->
        <li class="nav-item <%= active_class('/exercise_library') %>">
          <% if session[:user] && STAFF_ROLES.include?(session[:user].role) %>
          <a class="nav-link" href="/exercise_library">Exercises Library</a>
          <% end %>
        </li>

        <!-- Exercise Stats  -->
        <li class="nav-item <%= active_class("/users/#{ session[:user].username if session[:user] }/stats") %>">
          <% if session[:user] && session[:user].role == :patient %>
          <a class="nav-link" href="/users/<%= (session[:user].username if session[:user]) %>/stats">Stats</a>
          <% end %>
        </li>
      <!-- <li class="nav-item">
        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
      </li> -->

      <!-- Profile page -->
      <% if session[:user] %>
      <li class="nav-item <%= active_class("/users/#{ session[:user].username if session[:user] }/profile")%>">
        <a class="nav-link" href="/users/<%= (session[:user].username if session[:user]) %>/profile">Profile</a>
      </li>
      <% end %>

      <!-- get current weather -->
      <li class="nav-item">
        <form method="get" action="/weather">
          <a tabindex="-1" id="weather_btn" onclick="getWeather()" class="nav-link"  data-container="body" data-toggle="popover" data-trigger="focus" title="<div class='text-center'><b>Current Sydney Weather</b></div>" data-placement="right" data-content="Loading...">
            Weather
          </a>
        </form>
      </li>

      <!-- about page -->

      <li class="nav-item  <%= active_class("/about")%>">
        <a class="nav-link" href="/about">About</a>
      </li>


    </ul>
    <% if session[:user] %>
    <span class="text-white">Logged in as <%= session[:user].username %><button class="btn btn-light mx-3" onclick="logOut()">Log out</a></span>
      <% elsif request.path_info != "/login" %>
      <a href="/login" class="btn btn-light mx-3">Log in</a>
      <% end %>
