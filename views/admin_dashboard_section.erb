<h5 class=""><b>Current Admins</b></h5>
<br>

<div class="row justify-content-center">
<table class="table_accounts_list table table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col" style="width: 10%">#</th>
      <th scope="col" style="width: 10%">Last</th>
      <th scope="col" style="width: 10%">First</th>
      <th scope="col" style="width: 10%">Username</th>
      <th scope="col" style="width: 10%">Last login</th>
      <th scope="col" style="width: 10%"></th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @all_admins.each_with_index do |admin, index| %>

      <tr>
        <td><%= index + 1 %></td>
        <td><%= admin.last_name %></td>
        <td><%= admin.first_name %></td>
        <td><%= admin.username %></td>
        <td><%= admin.last_login_time.strftime("%d/%m/%Y %k:%M") if admin.last_login_time %>
        </td>
        <td></td>
        <td>
          <a href="/users/<%= admin.username %>/profile">View Profile</a>
          <a href="/users/<%= admin.username %>/deactivate_account" class="text-danger">Delete</a>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

</div>

<a class="btn btn-outline-primary" href="/new_account?role=admin">Create new Admin account</a>

<hr>
